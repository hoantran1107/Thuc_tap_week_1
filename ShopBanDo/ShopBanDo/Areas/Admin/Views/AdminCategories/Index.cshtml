<table class="table table-hover">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Category's name
            </th>
            <th>
                Sort
            </th>
            <th>
                Status
            </th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                string url = $"/{item.Alias}";
                <tr>
                    <td>
                        @item.CatId
                    </td>
                    <td>
                        @item.CatName
                    </td>
                    <td>
                        @item.Ordering
                    </td>
                    <td>
                        @{
                            if (!item.Published)
                            {
                                <label class="badge badge-danger">Block</label>
                            }
                            else
                            {
                                <label class="badge badge-success">Active</label>
                            }
                        }
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-area="Admin" asp-controller="AdminCategories" asp-action="Edit" asp-route-id="@item.CatId">Edit</a>
                        <a class="btn btn-light btn-sm" asp-area="Admin" asp-controller="AdminCategories" asp-action="Details" asp-route-id="@item.CatId">Detail</a>
                        <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="AdminCategories" asp-action="Delete" asp-route-id="@item.CatId">Delete</a>

                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<br />
<div aria-label="Page navigation example">
    <ul class="pagination">
        <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminCategories" asp-action="Index" />
    </ul>
</div>
