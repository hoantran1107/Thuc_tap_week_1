@model IEnumerable<ShopBanDo.Models.Role>

@{
    ViewData["Title"] = "Quản trị quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<p></p>
<p>
    <a asp-action="Create">Tạo mới quyền</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleId)
            </th>
            <th>
               Tên Role
            </th>
            <th>
               Mô tả
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null) {
            foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.RoleId">Cập nhật</a>
                <a class="btn btn-danger btn-sm" asp-action="Details" asp-route-id="@item.RoleId">Chi tiết</a> 
                <a class="btn btn-light btn-sm" asp-action="Delete" asp-route-id="@item.RoleId">Xóa</a>
               
            </td>
        </tr>
            }
        }
    </tbody>
</table>
