@model ShopBanDo.Models.Account

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Change Password</h4>
            <p class="card-description"> Change Password </p>
            <form enctype="multipart/form-data" method="post" asp-action="Edit" class="forms-sample">
                <input type="hidden" asp-for="AccountId" />
                <div class="form-group">
                    <label for="exampleInputName1">Email</label>
                    <input type="email" class="form-control" id="exampleInputName1" placeholder="Email" asp-for="Email" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Full Name</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Name" asp-for="Fullname">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" placeholder="Password" asp-for="Phone">
                </div>
                <div class="form-group">
                    <label for="ConfirmPassword">Confirm Password</label>
                    <input type="password" class="form-control" id="ConfirmPassword" placeholder="Confirm Password" name="ConfirmPassword">
                </div>
                <div class="form-group">
                    <label for="Active">Active</label>
                    <input type="checkbox" class="form-control" id="Active" placeholder="Confirm Password" checked asp-for="Active" readonly>
                </div>
                <div class="form-group">
                    <label for="Role">Role</label>
                    <select class="form-control" asp-for="RoleId" asp-items="@ViewBag.RoleId">
                        <option value="" selected disabled>Select Role</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>File upload</label>
                    <input type="file" class="form-controll" name="UploadImage" />
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>>

