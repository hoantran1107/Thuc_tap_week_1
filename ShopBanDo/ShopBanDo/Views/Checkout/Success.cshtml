
@model ShopBanDo.ModelView.MuaHangSuccessVM
@{
    ViewData["Title"] = "Check out success";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section Styles{
    <style type="text/css">
        .nice-select .list {
            border-radius: 0px;
            overflow-y: auto;
            overflow: hidden;
            max-height: 200px;
            overflow-y: scroll;
        }

        .nice-select .option:hover, .nice-select .option.focus, .nice-select .option.selected.focus {
            color: red;
            background: none;
        }
    </style>
}




<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="/assets/images/banner/2-1-1920x523.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">ORDER DETAILS</h2>
                        <ul>
                            <li>
                                <a href="/">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>ORDER DETAILS</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="checkout-area section-space-y-axis-100">
        <div class="container">
            <form>

                <div class="row">
                    <div class="col-lg-6 col-12">

                        <div class="checkbox-form">
                            <h3>ORDERED SUCCESSFULLY</h3>
                            <p>Order ID: #@Model.DonHangID</p>
                            <p>Thank you for ordering</p>
                            <br />
                            <h3>ORDER DETAILS</h3>
                            <p>Delivery details</p>
                            <p>Receiver: @Model.FullName</p>
                            <p>Phone number: @Model.Phone</p>
                            <p>Address: @Model.Address</p>
                            <br />
                            To view more about the order, please click <a asp-controller="Accounts" asp-action="Dashboard"><strong>Your account.</strong></a> Need support? Contact us: xxxxx
                        </div>
                    </div>
                    <div class="col-lg-6 col-12">
                        <img src="/assets/images/thanh-cong.jpeg" />
                    </div>
                </div>
            </form>

        </div>
    </div>
</main>
